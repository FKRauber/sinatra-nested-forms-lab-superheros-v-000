<h1>Flatiron</h1>

<div class="team">
  <h2>Team Motto: <%= @team.motto %></h2><br><br>
  <h3>Name: <%= @team.name %></h3><br>

  <h4>Height: <%= @pirate.height %> pounds</h4><br>

  <h4>Weight <%= @pirate.weight %> inches</h4><br>

</div><br>


<h2>Ships</h2>


<% @ships.each do |ship| %>

		  <div class="ship">

		    <p>Name: <%= ship.name %></p><br>

		    <p>Type: <%= ship.type %></p><br>

		    <p>Booty: <%= ship.booty %></p><br>

		  </div>

<% end %>
